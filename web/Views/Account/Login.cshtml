@model web.Models.LoginModel
@{
    ViewBag.Title = "Вход";
}
<style>
    .input-validation-error {
        border: 1px solid #ff0000;
        background-color: #ffeeee;
    }
</style>

<div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">

        <h3>Вход</h3>
        @Html.ValidationSummary()

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="form-group">
                <label>Имя пользователя</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Имя пользователя", required = "", autofocus = "" })
            </div>
            <div class="form-group">
                <label>Пароль</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Пароль", required = "" })
            </div>
            <button class="btn btn-primary" type="submit">Вход</button>
        }

    </div>
</div>